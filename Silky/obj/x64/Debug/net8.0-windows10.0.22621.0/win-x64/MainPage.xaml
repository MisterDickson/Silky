<?xml version="1.0" encoding="utf-8"?>
<Page x:ConnectionId='1'
    x:Class="Silky.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Silky"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
                         >

   <Grid x:ConnectionId='2' ColumnSpacing="10" RowSpacing="5" BorderThickness="10"
   CanDrag="True" 
   AllowDrop="True"
                             
                   >
      
      <Grid.ColumnDefinitions>
         <ColumnDefinition Width="*"/>
         <ColumnDefinition Width="*"/>
         <ColumnDefinition Width="*"/>
      </Grid.ColumnDefinitions>

      <Grid.RowDefinitions>
         <RowDefinition Height="*"/>
         <RowDefinition Height="10*"/>
         <RowDefinition Height="*"/>
      </Grid.RowDefinitions>


      <TextBlock Grid.Row="0" Grid.Column="0" Text="Circuit Board Files" VerticalAlignment="Center" Style="{StaticResource SubtitleTextBlockStyle}"/>

      <ListView x:ConnectionId='3' Grid.Row="1" Grid.Column="0" SelectionMode="Extended" VerticalAlignment="Top" x:Name="PCBListView"                                                />

      <Grid Grid.Row="2" Grid.Column="0" ColumnSpacing="5" VerticalAlignment="Center">

         <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
         </Grid.ColumnDefinitions>

         <Button x:ConnectionId='19' Grid.Column="0" Style="{StaticResource AccentButtonStyle}" HorizontalAlignment="Stretch" AccessKey="A" x:Name="LoadPCBFileButton"                                >
            <StackPanel Orientation="Horizontal" Spacing="6">
               <SymbolIcon Symbol="OpenFile" />
               <TextBlock Text="Add" />
            </StackPanel>
         </Button>
         <Button x:ConnectionId='20' Grid.Column="1" HorizontalAlignment="Stretch" AccessKey="R" x:Name="RemovePCBFileButton"                                  >
            <StackPanel Orientation="Horizontal" Spacing="6">
               <SymbolIcon Symbol="Clear" />
               <TextBlock Text="Remove" />
            </StackPanel>
         </Button>
      </Grid>

      <TextBlock Grid.Row="0" Grid.Column="1" Text="Change Layers from" VerticalAlignment="Center" Style="{StaticResource SubtitleTextBlockStyle}"/>

      <Grid Grid.Row="1" Grid.Column="1">
         <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="3*"/>
         </Grid.RowDefinitions>

         <ListView x:ConnectionId='16' Grid.Row="0" Grid.Column="0" SelectionMode="Extended" VerticalAlignment="Top" x:Name="FromLayerListView"                                                      />

         <TextBlock Grid.Row="1" Text="To" VerticalAlignment="Center" Style="{StaticResource SubtitleTextBlockStyle}"/>

         <ListView x:ConnectionId='17' Grid.Row="2" SelectionMode="Extended" VerticalAlignment="Top" x:Name="ToLayerListView"/>

         <TextBlock Grid.Row="3" Text="Apply to Parts" VerticalAlignment="Center" Style="{StaticResource SubtitleTextBlockStyle}"/>

         <ListView x:ConnectionId='18' Grid.Row="4" SelectionMode="Extended" VerticalAlignment="Top" x:Name="ApplyToPartListView"/>

      </Grid>

      <DropDownButton Grid.Row="2" Grid.Column="1" HorizontalAlignment="Stretch" AccessKey="P">
         <StackPanel Orientation="Horizontal" Spacing="6">
            <FontIcon x:ConnectionId='10' x:Name="PresetFontIcon" Glyph="&#xE8FD;"/>
            <TextBlock x:ConnectionId='11' x:Name="PresetTextBlock" Text="Preset Options" />
         </StackPanel>


         <DropDownButton.Flyout>
            <MenuFlyout Placement="Bottom">
               <MenuFlyoutItem x:ConnectionId='12' Text="Hand Soldering" ToolTipService.Placement="Right" ToolTipService.ToolTip="Footprints, Values and Texts are visible on F.SilkS. &#x0a;Any remainings on *.SilkS are moved to F.Fab" x:Name="HandSolderingPreset"                                  >
                  <MenuFlyoutItem.Icon>
                     <FontIcon Glyph="&#xE929;"/>
                  </MenuFlyoutItem.Icon>
               </MenuFlyoutItem>

               <MenuFlyoutItem x:ConnectionId='13' Text="Blank PCB" ToolTipService.Placement="Right" ToolTipService.ToolTip="All content of *.SilkS is moved to F.Fab" x:Name="BlankPCBPreset"                             >
                  <MenuFlyoutItem.Icon>
                     <FontIcon Glyph="&#xE7C4;"/>
                  </MenuFlyoutItem.Icon>
               </MenuFlyoutItem>

               <MenuFlyoutItem x:ConnectionId='14' Text="HTL Wien 10 - Values" ToolTipService.Placement="Right" ToolTipService.ToolTip="All content of *.SilkS is moved to F.Fab. &#x0a;Values are visible on F.Cu" x:Name="HTL10Preset"                                >
                  <MenuFlyoutItem.Icon>
                     <FontIcon Glyph="&#xEEA3;"/>
                  </MenuFlyoutItem.Icon>
               </MenuFlyoutItem>

               <MenuFlyoutItem x:ConnectionId='15' Text="HTL Wien 10 - References" ToolTipService.Placement="Right" ToolTipService.ToolTip="All content of *.SilkS is moved to F.Fab. &#x0a;References are visible on F.Cu" x:Name="HTL10ReferencePreset"                                   >
                  <MenuFlyoutItem.Icon>
                     <FontIcon Glyph="&#xE8B3;"/>
                  </MenuFlyoutItem.Icon>
               </MenuFlyoutItem>

            </MenuFlyout>
         </DropDownButton.Flyout>
      </DropDownButton>

      <TextBlock Grid.Row="0" Grid.Column="2" Text="Operations" VerticalAlignment="Center" Style="{StaticResource SubtitleTextBlockStyle}"/>

      <Grid Grid.Row="1" Grid.Column="2">
         <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="*"/>
         </Grid.RowDefinitions>

         <Grid>
            <Grid Grid.Row="0" ColumnSpacing="5" VerticalAlignment="Top">
               <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="*"/>
                  <ColumnDefinition Width="*"/>
               </Grid.ColumnDefinitions>

               <Button x:ConnectionId='8' Grid.Column="0" HorizontalAlignment="Stretch" AccessKey="+" x:Name="AddOperationButton"                                 >
                  <StackPanel Orientation="Horizontal" Spacing="6">
                     <SymbolIcon Symbol="Add" />
                     <TextBlock Text="Add" />
                  </StackPanel>
               </Button>
               <Button x:ConnectionId='9' Grid.Column="1" HorizontalAlignment="Stretch" AccessKey="-" x:Name="RemoveOperationButton"                                    >
                  <StackPanel Orientation="Horizontal" Spacing="6">
                     <SymbolIcon Symbol="Remove" />
                     <TextBlock Text="Remove" />
                  </StackPanel>
               </Button>
            </Grid>
         </Grid>

         <ListView x:ConnectionId='6' Grid.Row="1" SelectionMode="Extended" VerticalAlignment="Top" x:Name="OperationsListView"                                                       />


         <Button x:ConnectionId='7' Grid.Row="2" HorizontalAlignment="Stretch" AccessKey="V" VerticalAlignment="Bottom" x:Name="PreviewButton"                            >
            <StackPanel Orientation="Horizontal" Spacing="6">
               <SymbolIcon Symbol="View"/>
               <TextBlock Text="Preview"/>
            </StackPanel>
         </Button>

      </Grid>

      <Grid Grid.Row="2" Grid.Column="2" ColumnSpacing="5" VerticalAlignment="Center">

         <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
         </Grid.ColumnDefinitions>

         <Button x:ConnectionId='4' Grid.Column="0" HorizontalAlignment="Stretch" AccessKey="O" x:Name="OverrideAllButton"                                >
            <StackPanel Orientation="Horizontal" Spacing="6">
               <SymbolIcon Symbol="SaveLocal"/>
               <TextBlock Text="Override all"/>
            </StackPanel>
         </Button>

         <Button x:ConnectionId='5' Grid.Column="1" HorizontalAlignment="Stretch" AccessKey="S" x:Name="SaveAllAsButton"                              >
            <StackPanel Orientation="Horizontal" Spacing="6">
               <SymbolIcon Symbol="Save"/>
               <TextBlock Text="Save a Copy"/>
               <FontIcon Glyph="&#xE76C;" />
            </StackPanel>
         </Button>
      </Grid>

   </Grid>

</Page>

